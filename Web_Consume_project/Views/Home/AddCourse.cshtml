@model Web_Consume_project.Models.Course

@{
    ViewData["Title"] = "Add Course";
}

<h1>AddCourse</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCourse">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.Id)
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoOfStudents" class="control-label"></label>
                <input asp-for="NoOfStudents" class="form-control" />
                <span asp-validation-for="NoOfStudents" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Course" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
